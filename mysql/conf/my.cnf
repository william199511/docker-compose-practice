[mysqld]
# 设置服务器字符集为UTF-8
character-set-server=utf8mb4
collation-server=utf8mb4_general_ci

# 端口号
port=3306

# 时区设置
default-time-zone='+8:00'

# 最大连接数
max_connections=200

# 慢查询日志
slow_query_log=1
slow_query_log_file=/var/lib/mysql/mysql-slow.log
long_query_time=2

# 启用 binlog（用于主从、恢复）
log-bin=mysql-bin
server-id=1
binlog_format=ROW

# 安全设置
skip-name-resolve

# 存储引擎默认使用 InnoDB
default-storage-engine=INNODB

[client]
# 设置客户端字符集
default-character-set=utf8mb4

[mysql]
# 设置 mysql 命令行工具的字符集
default-character-set=utf8mb4
